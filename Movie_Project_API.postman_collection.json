          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept-Language",
                "value": "{{language}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/upload-avatar",
              "host": ["{{base_url}}"],
              "path": ["users", "upload-avatar"]
            },
            "description": "Upload avatar"
          }
        },
        {
          "name": "Delete Avatar",
          "request": {
            "method": "DELETE",
            "header": [
